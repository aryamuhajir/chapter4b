<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher_background"
            android:id="@+id/gambarAPK"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAMA APLIKASI"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/namaAPK"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="NAMA PT"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/namaPT"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="KATEGORI APK"
                    android:textColor="@color/black"
                    android:id="@+id/kategoriAPK"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="16sp"
                    android:drawableRight="@drawable/ic_baseline_star_24"
                    android:id="@+id/ratingAPK"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 MB"
                    android:textSize="16sp"
                    android:id="@+id/ukuranAPK"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50k"
                    android:textSize="16sp"
                    android:id="@+id/unduhAPK"
                    android:layout_marginEnd="10dp"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>