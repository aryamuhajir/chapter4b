<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".TugasSabtu.Register">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NO HP"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:inputType="number"
        android:id="@+id/edtNoHP"
        android:layout_centerInParent="true"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="EMAIL"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:id="@+id/edtEmail"
        android:inputType="textEmailAddress"
        android:layout_below="@id/edtNoHP"
        android:layout_centerInParent="true"/>

    <EditText
        android:id="@+id/edtNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtEmail"
        android:layout_centerInParent="true"
        android:hint="NAMA"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:id="@+id/edtPassword2"
        android:layout_below="@id/edtNama"
        android:layout_centerInParent="true"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ULANGI PASSWORD"
        android:textSize="20dp"
        android:inputType="textPassword"
        android:layout_below="@id/edtPassword2"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:id="@+id/edtKonfirmasiPassword"
        android:layout_centerInParent="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:layout_below="@id/edtKonfirmasiPassword"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnRegister2"/>


</RelativeLayout>